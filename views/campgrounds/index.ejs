<% include ../partials/header %>

<% if(currentUser && currentUser.isAdmin) {%>
<h1> You're an admin!!</h1>
<% } %>
<div class="container text-center">
    <header class="jumbotron">
        <div class="container">
            <h2>Welcome to YelpCamp</h2>
            <h4>View Our Campgrounds from all over the world</h4>
            <p class="btn btn-primary btn-large">
                <a href="/campgrounds/new">Add a New Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular CampGrounds</h3>
        </div>
    </div>
    <div class="row">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail">
                <img style="height: 100%; width: 100%;"src="<%= campground.image %>"> 
                <div class="caption text-center">
                   <h3> <%= campground.name %> </h3> 
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>